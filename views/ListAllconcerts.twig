<!DOCTYPE html>
<html>
<head>
    <title>List All Shows</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .table-responsive {
            overflow-x: auto;
        }
    </style>
</head>
<body>

<div class="container mt-5">
    <div class="table-responsive">
        <h2>All Shows</h2>
        <table id="showsTable" class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>show_id</th>
                <th>Name</th>
                <th>Domain</th>
                <th>Section</th>
                <th>Show Locations</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for key, row in response %}
                <tr>
                    <td>{{ row.show_id }}</td>
                    <td>{{ row.name }}</td>
                    <td>{{ row.domain }}</td>
                    <td>{{ row.section }}</td>
                    <td>
                        <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#showLocationsModal{{ key }}" data-key="{{ key }}">Detail</button>
                    </td>
                    <td>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editModal{{ key }}" data-key="{{ key }}">Edit</button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <!-- Show Locations Modal -->
        {% for key, row in response %}
            <div class="modal fade" id="showLocationsModal{{ key }}" tabindex="-1" aria-labelledby="showLocationsModalLabel{{ key }}" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="showLocationsModalLabel{{ key }}">Show Locations</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Address</th>
                                    <th>Hall</th>
                                    <th>City</th>
                                    <th>Date</th>
                                    <th>Day</th>
                                    <th>Time</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for location in row.showLocations %}
                                    <tr>
                                        <td>{{ row.show_id }}</td>
                                        <td>{{ location.address }}</td>
                                        <td>{{ location.hall }}</td>
                                        <td>{{ location.city }}</td>
                                        <td>{{ location.date }}</td>
                                        <td>{{ location.day }}</td>
                                        <td>{{ location.time }}</td>
                                        <td>
                                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editShowLocationModal{{ key }}_{{ loop.index0 }}">Edit</button>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

        <!-- Edit Show Location Modal -->
        {% for key, row in response %}
            {% for index, location in row.showLocations %}
                <div class="modal fade" id="editShowLocationModal{{ key }}_{{ index }}" tabindex="-1" aria-labelledby="editShowLocationModalLabel{{ key }}_{{ index }}" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="editShowLocationModalLabel{{ key }}_{{ index }}">Edit Show Location Details</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <input type="hidden" id="showID{{ key }}_{{ index }}" value="{{ row.show_id }}">
                                    <div class="mb-3">
                                        <label for="editAddress{{ key }}_{{ index }}" class="form-label">Address</label>
                                        <input type="text" class="form-control" id="editAddress{{ key }}_{{ index }}" value="{{ location.address }}">
                                    </div>
                                    <div class="mb-3">
                                        <label for="editHall{{ key }}_{{ index }}" class="form-label">Hall</label>
                                        <input type="text" class="form-control" id="editHall{{ key }}_{{ index }}" value="{{ location.hall }}">
                                    </div>
                                    <div class="mb-3">
                                        <label for="editCity{{ key }}_{{ index }}" class="form-label">City</label>
                                        <input type="text" class="form-control" id="editCity{{ key }}_{{ index }}" value="{{ location.city }}">
                                    </div>
                                    <div class="mb-3">
                                        <label for="editDate{{ key }}_{{ index }}" class="form-label">Date</label>
                                        <input type="date" class="form-control" id="editDate{{ key }}_{{ index }}" value="{{ location.date }}">
                                    </div>
                                    <div class="mb-3">
                                        <label for="editDay{{ key }}_{{ index }}" class="form-label">Day</label>
                                        <input type="text" class="form-control" id="editDay{{ key }}_{{ index }}" value="{{ location.day }}">
                                    </div>
                                    <div class="mb-3">
                                        <label for="editTime{{ key }}_{{ index }}" class="form-label">Time</label>
                                        <input type="time" class="form-control" id="editTime{{ key }}_{{ index }}" value="{{ location.time }}">
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                {# <button type="button" class="btn btn-primary">Save Changes</button> #}
                                <button type="button" class="btn btn-primary" onclick="updateShowLocations('{{ key }}', '{{ index }}')">Save Changes</button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

        <!-- Edit Modal -->
        {% for key, row in response %}
            <div class="modal fade" id="editModal{{ key }}" tabindex="-1" aria-labelledby="editModal{{ key }}Label" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editModal{{ key }}Label">Edit Show Details</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <input type="hidden" id="showID{{ key }}" value="{{ row.show_id }}">
                                <div class="mb-3">
                                    <label for="editName{{ key }}" class="form-label">Name</label>
                                    <input type="text" class="form-control" id="editName{{ key }}" value="{{ row.name }}">
                                </div>
                                <div class="mb-3">
                                    <label for="editDomain{{ key }}" class="form-label">Domain</label>
                                    <input type="text" class="form-control" id="editDomain{{ key }}" value="{{ row.domain }}">
                                </div>
                                <div class="mb-3">
                                    <label for="editSection{{ key }}" class="form-label">Section</label>
                                    <input type="text" class="form-control" id="editSection{{ key }}" value="{{ row.section }}">
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            {# <button type="button" class="btn btn-primary">Save Changes</button> #}
                            <button type="button" class="btn btn-primary" onclick="updateValues('{{ key }}')">Save Changes</button>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/Modules/listAllconcerts.js"></script>

<script>
    $(document).ready(function () {
        $('#showsTable').DataTable({ "ordering": false });
    });

    // JavaScript code for modal content loading here...

</script>
<script>
// Quick edit modal
function updateValues(key) {
    var showId = $('#showID' + key).val();
    var name = $('#editName' + key).val();
    var domain = $('#editDomain' + key).val();
    var section = $('#editSection' + key).val();

    // Send AJAX request to update values
    $.ajax({
        url: 'quick-edit-show', // Replace with your server endpoint
        method: 'POST',
        data: {
            showId: showId,
            name: name,
            domain: domain,
            section: section
        },
        success: function(response) {
            // Handle success response if needed
            // For example, close the modal or show a success message
            $('#editModal' + key).modal('hide');
        },
        error: function(error) {
            // Handle error response if needed
        }
    });
}
</script>

<script>
// Detail edit modal 
function updateShowLocations( key, index) {
    var showId = $('#showID' + key + '_' + index).val();
    var address = $('#editAddress' + key + '_' + index).val();
    var hall = $('#editHall' + key + '_' + index).val();
    var city = $('#editCity' + key + '_' + index).val();
    var date = $('#editDate' + key + '_' + index).val();
    var day = $('#editDay' + key + '_' + index).val();
    var time = $('#editTime' + key + '_' + index).val();

    // Send AJAX request to update location values
    $.ajax({
        url: 'detail-edit-show', // Replace with your server endpoint
        method: 'POST',
        data: {
            showId: showId,
            key: key,
            index: index,
            address: address,
            hall: hall,
            city: city,
            date: date,
            day: day,
            time: time
        },
        success: function(response) {
            // Handle success response if needed
            // For example, close the modal or show a success message
            $('#editModal' + key + '_' + index).modal('hide');
        },
        error: function(error) {
            // Handle error response if needed
        }
    });
}
</script>


</body>
</html>
